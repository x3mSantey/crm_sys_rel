$main-color = #1D1F25
$sec-color = #292929

$back-color = #e2e2e2
$hover-color = #BF2119

$grey = #e2e2e2
$black = #000
$blue = #0070B2
$light_blue = #30BCED

$main-text-color = #fff
$sec-text-color = #9D9C9C

$green-indicator = #669900
$yellow = #faa916 

@font-face
    font-family TheCapt 
    src url(fonts/TheCapt.otf)

@font-face
    font-family ProductSans 
    src url(fonts/ProductSans.otf)

body, html 
    margin 0
    padding 0
    background-color $grey

a   
    text-decoration none 
    color $main-text-color
    &:visited
        color $main-text-color

h1
    font-family TheCapt 
    font-weight inherit
    color $main-text-color
    margin 0
    padding 5px 10px 15px 10px
    height 33px

h2
    font-family TheCapt 
    font-weight inherit
    color $main-text-color
    margin 0
    padding 5px 10px 15px 10px

h4
    font-family ProductSans
    font-size 18px
    color $main-text-color
    margin 0
    padding 0 10px 0 0px

.btn
    border none
    background-color $yellow 
    color $black
    height 25px

    &:hover
        cursor pointer
        color $main-text-color
        background-color $sec-color
        border 1px solid $yellow
        transition-duration 0.5s
        
input, button, select 
    outline none
    border none

input[type=text]
    height 20px
    background-color $grey
    border-bottom 3px solid $blue
    padding-left 10px

input[type=number]
    height 20px
    background-color $grey
    border-bottom 3px solid $blue
    padding-left 10px

button
    &:hover
        cursor pointer
        transition-duration 0.5s

select 
    width 150px
    height 25px
    text-align center
    border-bottom 2px solid $blue
    background-color $grey 

.hor_line 
    width 100%
    height 3px
    margin-bottom 15px
    background-color $light_blue

p   
    font-size 14px
    font-weight bold
    color $main-text-color
    margin 0
    padding-bottom 5px

.del_btn
    display none
    width 20px
    height 20px
    margin 3px 0 0 5px
    border none
    background-color $grey

    background-image url(img/icon_del.png)
    background-size cover
    background-repeat no-repeat
    background-position center

    &:hover
        cursor pointer
        background-image url(img/icon_del_v2.png)
        background-size cover
        background-repeat no-repeat
        background-position center

.edit_block
    display flex
    flex-direction row
    justify-content flex-end
    width 275px
    height 25px



