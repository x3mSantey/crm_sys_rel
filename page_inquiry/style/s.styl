$main-color = #1D1F25
$sec-color = #292929

$back-color = #e2e2e2
$hover-color = #BF2119

$grey = #e2e2e2
$black = #000
$blue = #0070B2
$light_blue = #30BCED

$main-text-color = #fff
$sec-text-color = #9D9C9C

$green-indicator = #669900
$yellow = #faa916 

@font-face
    font-family TheCapt 
    src url(fonts/TheCapt.otf)

@font-face
    font-family ProductSans 
    src url(fonts/ProductSans.otf)

body, html 
    margin 0
    padding 0
    background-color $grey

a   
    text-decoration none 
    color $main-text-color
    &:visited
        color $main-text-color

h1
    font-family TheCapt 
    font-weight inherit
    color $main-text-color
    margin 0
    padding 5px 10px 15px 10px
    height 33px

h2
    font-family TheCapt 
    font-weight inherit
    color $main-text-color
    margin 0
    padding 5px 10px 15px 10px

h4
    font-family ProductSans
    font-size 18px
    color $main-text-color
    margin 0
    padding 0 10px 0 0px

.btn
    border none
    background-color $yellow 
    color $black
    height 25px

    &:hover
        cursor pointer
        color $main-text-color
        background-color $sec-color
        border 1px solid $yellow
        transition-duration 0.5s
        
input, button, select 
    outline none
    border none

input[type=text]
    height 20px
    background-color $grey
    border-bottom 3px solid $blue
    padding-left 10px

input[type=number]
    height 20px
    background-color $grey
    border-bottom 3px solid $blue
    padding-left 10px

button
    &:hover
        cursor pointer
        transition-duration 0.5s

select 
    width 150px
    height 25px
    text-align center
    border-bottom 2px solid $blue
    background-color $grey 


p   
    font-size 14px
    font-weight bold
    color $main-text-color
    margin 0
    padding-bottom 5px

.del_btn
    display none
    width 20px
    height 20px
    margin 3px 0 0 5px
    border none
    background-color $grey

    background-image url(img/icon_del.png)
    background-size cover
    background-repeat no-repeat
    background-position center

    &:hover
        cursor pointer
        background-image url(img/icon_del_v2.png)
        background-size cover
        background-repeat no-repeat
        background-position center

.edit_block
    display flex
    flex-direction row
    justify-content flex-end
    width 275px
    height 25px



/*--------------------------------


    контейнер заголовка   


----------------------------------*/
.header_conteiner
    display flex
    flex-direction row
    justify-content: space-around
    position fixed 
    top 0

    width 100%
    height 50px
    background-color $main-color
    border-bottom 3px solid $light_blue
    z-index 999

    .nav_btn_block
        display flex
        flex-direction row
        justify-content space-around

    .nav_btn
        width 150px
        height 35px
        padding-top 15px
        text-align center
        color $main-text-color
        font-family ProductSans
        &:hover
            background-color $yellow
            color $black
            transition-duration 0.5s
            cursor pointer

#create_inq
    padding-top 8px
    height 42px

        
/*--------------------------------


    контейнер с основной информацией    


----------------------------------*/


.main_conteiner
    display flex
    flex-direction row
    justify-content flex-start
    width 100%
    box-sizing content-box
    margin-top 75px

/*--------------------------------


    контейнер с таблицей ag-grid     


----------------------------------*/


.list_inq_conteiner
    width 50%
    margin 25px 0 25px 25px
    padding 10px 
    box-sizing content-box
    background-color $main-text-color


.list_inq__grid
    box-sizing content-box
    height 400px
    text-align center


.list_route__grid
    box-sizing content-box
    height 135px
    max-height 200px
    margin-bottom 10px
    text-align center

.ag-header-cell-label
    text-align center

.list_route__grid
    .ag-header-cell-text
        width 100%
        font-size 12px
        color $main-text-color




/*----------------------------------


    контейнер с информацией по лиду      


----------------------------------*/

.inq_string_big
