.cargo-info
    padding 5px 20px 5px 20px
    margin-bottom 15px
    background-color $grey
    border-radius 10px
    .inq_string_big
        width 560px
        margin-bottom 5px        
    p
        width 220px
        color $black
        font-size 16px
