$main-color = #1D1F25
$sec-color = #292929

$back-color = #e2e2e2
$hover-color = #BF2119

$grey = #e2e2e2
$black = #000
$blue = #0070B2
$light_blue = #30BCED

$light_grey = #3B3B3B
$third_grey = #37373D

$main-text-color = #fff
$sec-text-color = #9D9C9C

$green-indicator = #669900
$red-indicator = #BF2119
$yellow = #faa916 


@font-face
    font-family TheCapt 
    src url(fonts/TheCapt.otf)

@font-face
    font-family ProductSans 
    src url(fonts/ProductSans.otf)


body, html 
    margin 0
    padding 0
    background-color $grey

a   
    text-decoration none 
    &:visited
        color $main-text-color

h1
    font-family TheCapt 
    font-weight inherit
    color $main-text-color
    margin 0
    padding 5px 10px 15px 10px
    height 33px

h4
    font-family ProductSans
    font-size 18px
    color $main-text-color
    margin 0
    padding 0 10px 0 0px

.btn
    border none
    background-color $yellow 
    color $black
    height 25px

    &:hover
        cursor pointer
        color $main-text-color
        background-color $sec-color
        border 1px solid $yellow
        transition-duration 0.5s
        
input, button, select 
    outline none
    border none

input[type=text]
    background-color $grey
    border-bottom 3px solid $blue
    padding-left 10px

input[type=number]
    background-color $grey
    border-bottom 3px solid $blue
    padding-left 10px

.warning_window
    display none
    position absolute
    top 465px
    left 575px
    width 308px
    height 45px
    padding 10px 0 0 20px
    color $black
    background-image url(img/icon_warrning_mes2.png)
    background-size 85%
    background-repeat no-repeat

p   
    font-size 14px
    font-weight bold
    color $main-text-color
    margin 0


.header_conteiner
    display flex
    flex-direction row
    justify-content: space-around
    position fixed 
    top 0

    width 100%
    height 50px
    background-color $main-color
    border-bottom 3px solid $light_blue
    z-index 999

    .nav_btn_block
        display flex
        flex-direction row
        justify-content space-around

    .nav_btn
        width 150px
        height 35px
        padding-top 15px
        text-align center
        color $main-text-color
        font-family ProductSans
        &:hover
            background-color $yellow
            color $black
            transition-duration 0.5s
            cursor pointer

#create_inq
    padding-top 8px
    height 42px

#create_contr
    padding 5px 15px 10px 15px

.main_conteiner
    display flex
    flex-direction row
    justify-content flex-start
    position relative
    left 50%
    width 60%
    box-sizing content-box
    margin 100px 0 20px -605px
    
    
